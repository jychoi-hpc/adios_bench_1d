<?xml version='1.0' encoding='utf-8'?>
<adios-config host-language="C">
  <adios-group name="writer">
    <var name="gnx" type="unsigned long" />
    <var name="offs" type="unsigned long" />
    <var name="nx" type="unsigned long" />

    <global-bounds dimensions="gnx" offsets="offs">
        <var dimensions="nx" name="x" type="integer" />
    </global-bounds>

  </adios-group>

  
  <transport group="writer" method="MPI">local-fs=1</transport>
  

</adios-config>